<div>
  <%= link_to 'Friend App', root_url %> |
  <% if user_signed_in? && current_user %>
    <%= current_user.email %> |
    <%= link_to 'Add new friend', new_friend_url %> |
    <%= link_to 'Edit profile', edit_user_registration_path %> |
    <%= button_to 'log out', destroy_user_session_url, method: :delete %>
  <% else %>
