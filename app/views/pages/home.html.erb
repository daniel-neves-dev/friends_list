<div class=" flex justify-center h-96 items-center">
    <div class="max-w-sm p-6 bg-white border-2 border-gray-300 rounded-lg dark:bg-gray-800 dark:border-gray-700 shadow-2xl">

        <h1 class="mb-2 text-3xl font-bold tracking-tight text-gray-900 dark:text-white"><%= t'home.title' %></h1>

        <p class="mb-4 text-2xl font-md tracking-tight text-blue-500 dark:text-white">
          <%= link_to t('home.friends_list'), friends_url %>
        </p>

        <div class="flex content-center justify-center">
          <% if user_signed_in? %>
            <div>
              <%= link_to t('home.edit_profile'), edit_user_registration_path %>
            </div>
            <div>
              <%= button_to t('home.log_out'), destroy_user_session_path, method: :delete %>
            </div>
          <% else %>
            <div class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800">
              <%= link_to t('home.sign_up'),new_user_registration_path %>
            </div>
            <div class="focus:outline-none text-white bg-green-700 hover:bg-green-800 focus:ring-4 focus:ring-green-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-800">
              <%= link_to t('home.log_in'),user_session_path %>
            </div>
          <% end %>
        </div>
    </div>
</div>

